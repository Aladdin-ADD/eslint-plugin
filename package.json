{
  "name": "eslint-plugin-autofix",
  "version": "0.0.1",
  "author": "薛定谔的猫 <weiran.zsd@outlook.com>",
  "description": "autofix some errors reported by some eslint rules.",
  "main": ".lib/index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "mocha tests/**/*"
  },
  "files": [
    "LICENSE",
    "README.md",
    "lib",
    "index.js"
  ],
  "dependencies": {
    "eslint-rule-composer": "^0.3.0"
  },
  "devDependencies": {
    "@not-an-aardvark/node-release-script": "^0.1.0",
    "eslint": "^5.13.0",
    "eslint-config-eslint": "^5.0.1",
    "eslint-plugin-node": "^8.0.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0"
  },
  "peerDependencies": {
    "eslint": ">= 5.0.0"
  },
  "keywords": [
    "eslint plugin",
    "autofix"
  ],
  "eslintConfig": {
    "extends": [
      "eslint"
    ],
    "overrides": [
      {
        "files": [
          "tests/**/*.js"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint -- --fix && git add ."
    }
  },
  "license": "MIT",
  "engines": {
    "node": ">=8"
  }
}
